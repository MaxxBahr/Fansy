{
  "expo": {
    "name": "Fansy",
    "slug": "Fansy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "fansy",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.Fansy",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to capture photos and videos for character creation.",
        "NSMicrophoneUsageDescription": "This app may use the microphone for video recording."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.Fansy"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
            [
        "expo-camera",
        {
          "cameraPermission": "Allow Fansy to access your camera to capture photos and videos."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000000"
        }
      ],
      [
        "expo-video",
        {
          "supportsBackgroundPlayback": true,
          "playbackRequiresUserAction": false
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
